@{
    ViewBag.Title = "PayWithPaypal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var Detail = Session["Detail"] as Tourizen.Models.DetailModel;
}

<div class="container" style="padding-top: 50px">

    <div class="row">

        <div class="col-sm-1"></div>

        <!--Booking-->
        <div class="col-sm-4">

            <div class="row">

                <div class="col-sm-12">
                    <div class="panel panel-default">

                        <div class="panel-heading">
                            <h3 class="panel-header">Booking Detail</h3>
                        </div>

                        <div class="col-sm-12">
                            <h5><strong>Check In - </strong>@Detail.Booking.CheckIn.ToLongDateString()</h5>
                        </div>

                        <div class="col-sm-12">
                            <h5><strong>Check Out - </strong>@Detail.Booking.CheckOut.ToLongDateString()</h5>
                        </div>

                        <div class="col-sm-12">
                            <h5><strong>Total Night - </strong>@Detail.Booking.NumberNight Night</h5>
                        </div>

                        <div class="col-sm-12">
                            <h5><strong>Total Room - </strong>@Detail.Booking.NumberRoom Room</h5>
                        </div>

                        <hr />

                        <div class="col-sm-12">
                            <h5><strong>@Detail.RoomType.Name</strong>
                                ( @Detail.Hotel.Name )</h5>
                        </div>

                        <div class="col-sm-12">
                            <h5><strong>Guest Per Room - </strong>@Detail.RoomType.GuestPerRoom Person</h5>
                        </div>

                        <div class="col-sm-12">
                            <h5>
                                @if (@Detail.RoomType.Cancellable.Equals(true))
                                {
                                    <label class="text-success">Free Cancellation</label> 
                                }
                                else
                                {
                                    <label class="text-success">Non Refundable</label>
                            
                                }
                            </h5>
                        </div>

                    </div>

                </div>

            </div>

        </div>

        <!--End Booking Content-->

        <!--Cost and Guest-->
        <div class="col-sm-6">
            <!---Cost-->
            <div class="row">
                <div class="col-sm-12">

                    <div class="panel panel-default">

                        <div class="panel-heading">
                            <h3 class="panel-header">Cost Summary</h3>
                        </div>

                        <div class="col-sm-12" style="margin-top: 15px">
                            <div class="row">
                                <h5 class="col-sm-6"><strong>Room Charges(Per Room)</strong></h5>
                                <h5 class="col-sm-6"><strong>$ @Detail.RoomType.PricePerNight x @Detail.Booking.NumberNight Night x @Detail.Booking.NumberRoom Room</strong></h5>
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <hr style="margin: 5px 5px 5px 5px;" />
                        </div>

                        <div class="col-sm-12">
                            <div class="row">
                                <h3 class="col-sm-6"><strong class="text-danger">Total</strong></h3>
                                <h3 class="col-sm-6"><strong class="text-danger">$ @Detail.Booking.TotalCharge</strong></h3>
                            </div>
                        </div>


                        <div class="col-sm-12">
                            <p class="text-warning"><strong>Booking charges does not include Tax and ServiceFee.</strong></p>
                        </div>


                    </div>

                </div>
            </div>
            <!---End Cost-->

            <!---Guest Form-->
            <div class="row">
                <div class="col-sm-12">

                    <div class="panel panel-default">

                        @using (Html.BeginForm("Pay","Booking"))
                        { 
                            @Html.ValidationSummary(true)

                            <div class="col-sm-12">
                                <h4><strong>Pay With PayPal</strong></h4>
                            </div> 
                            
                            <div class="col-sm-12">
                                <input type='image' name='submit'
                                    src='https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif' />
                            </div>                   
                           
                        }

                    </div>
                </div>

            </div>
            <!---End Guest Form-->
        </div>

        <!--End Cost and Guest-->


        <div class="col-sm-1"></div>

    </div>
</div>
